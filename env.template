# =============================================================================
# PLEX AGENCY - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env for local development
# Copy this file to .env.production for production deployment

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
HOSTNAME=localhost
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
# Memory optimization for production (uncomment for production)
# NODE_OPTIONS="--max-old-space-size=2048"

# Development settings (remove in production)
NEXT_PUBLIC_DEBUG=true
ANALYZE=false

# =============================================================================
# CONTACT FORM & EMAIL (Optional - for future features)
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
CONTACT_EMAIL=hello@plex.ee

# =============================================================================
# ANALYTICS & TRACKING (Optional)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager (alternative to GA)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =============================================================================
# SECURITY & PERFORMANCE
# =============================================================================
NEXT_PUBLIC_CSP_NONCE=true
NEXT_PUBLIC_IMAGES_DOMAINS=plex.ee

# =============================================================================
# DATABASE (Optional - for future features)
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/plex_db

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================
# Stripe (for payments)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Social Media API Keys (for dynamic content)
INSTAGRAM_ACCESS_TOKEN=your_token
LINKEDIN_API_KEY=your_key
